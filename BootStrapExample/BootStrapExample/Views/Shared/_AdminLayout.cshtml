@using Antlr.Runtime.Tree
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="jumbotron row">
        @*Header bar*@
        <div class="navbar navbar-inverse navbar-fixed-top ">
            @*Logo*@
            <div class="navbar-brand col-lg-1">
                <img src="" alt="Logo">
            </div>

            @*Title*@

            <div class="text-primary col-lg-7 col-md-2">
                <h3> Customer Admin Services & Enquiries (CASE) - Production</h3>
            </div>

            @*Langauge Dropdown*@
            <div class="dropdown col-lg-1 col-md-12">
                <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                    English-Australia
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li><a href="#">Chinese</a></li>
                    <li><a href="#">Hindi</a></li>
                    <li><a href="#">Japanese</a></li>
                </ul>
            </div>

            @*Version area*@
            <div class="col-lg-1 navbar-brand">
                Version: @ViewBag.Version
            </div>

            @*Welcome Note*@
            <div class="col-lg-1 navbar-default">
                <p>
                    <small>
                        Welcome,<br />
                        <label class="control-label">
                            @ViewBag.UserName
                        </label>
                    </small>
                </p>
            </div>
        </div>

        @*Side bar*@

        <div id="Sidebar" class="container col-md-2">
            @*App Icons container*@
            <div class=" col-lg-12 btn-block btn-xs btn-group-lg row ">
                @*<div class="btn-xs glyphicon-signal glyphicon btn btn-success "></div>*@
                @*<div class="btn-xs glyphicon-pencil glyphicon btn btn-info "></div>
                    <div class="btn-xs glyphicon-user glyphicon btn btn-warning "></div>
                    <div class="btn-xs glyphicon-cog glyphicon btn btn-danger "></div>*@
                @Html.Bootstrap().Icon(new Icon("btn-xs glyphicon glyphicon-signal btn btn-success "))
                @Html.Bootstrap().Icon(new Icon("btn-xs glyphicon-pencil glyphicon btn btn-info"))
                @Html.Bootstrap().Icon(new Icon("btn-xs glyphicon-user glyphicon btn btn-warning"))
                @Html.Bootstrap().Icon(new Icon("btn-xs glyphicon-cog glyphicon btn btn-danger"))
            </div>
            @*Side Menu List Container*@
            @using (var dd = Html.Bootstrap().Begin(new DropDown("Click me")))
            {
                @dd.Header("Some header")
                @dd.ActionLink("Line Text 1", "action1")
                @dd.Divider()
                @dd.ActionLink("Line Text 2", "action2")
            }
            <div class="container navbar navbar-inverse row">
                <ul class=" list-group nav navbar-nav">
                    <li class="list-group-item"><a class="glyphicon-home glyphicon col-lg-1" href="#"><span class=" col-sm-pull-3">Home</span> </a></li>
                    <li class="list-group-item"><a>Primary Menu Item</a></li>
                    <li class="list-group-item">
                        <a>Primary Menu Item <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li class="list-group-item"><a href="#">Secondary Menu Item</a></li>
                            <li class="list-group-item"><a href="#">Secondary Menu Item</a></li>
                            <li class="list-group-item"><a href="#">Secondary Menu Item</a></li>
                        </ul>
                    </li>

                    <li class="list-group-item"><a href="#">Primary Menu Item</a></li>
                    <li class="list-group-item"><a href="#">Primary Menu Item</a></li>

                    <li class="list-group-item"><a href="#">Primary menu item that wraps over more than 3 lines of text</a></li>
                    <li class="list-group-item"><a href="#">Special Primary Menu Item</a></li>
                    <li class="list-group-item"><a href="#">Special Primary Menu Item</a></li>
                </ul>
            </div>
        </div>
        @*Dyainamic Container*@
        <div id="Container" class="col-md-10">

            @*ContainerHeader*@
            <div class="">
                @*Nevigator*@
                <div class="">
                    <div class="glyphicon-home glyphicon col-md-2"> Home </div>
                </div>
            </div>

            <div class="container body-content">
                @RenderBody()
                <hr />

            </div>
        </div>
        <footer></footer>
    </div>
</body>
</html>
